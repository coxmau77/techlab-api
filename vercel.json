{
  "version": 2,
  "builds": [
    {
      "src": "api",
      "use": "@vercel/node",
      "config": {
        "handler": "index.js"
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/index.html",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/auth/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ]
}